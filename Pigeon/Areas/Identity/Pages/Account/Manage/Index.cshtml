@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="t-login h-vh form-container">
    <section class="t-login__container px-3 py-sm-auto">
        <h3 class="t-24 clr-dark-100 fw-bold text-center mt-2">Profile</h3>
        <hr />
        <form id="profile-form" method="post">
            <div class="inputs-container">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="submit-button-container">
                    <button id="update-profile-button" type="submit" class="p-btn p-btn--primary fw-bold mt-45">Save</button>
                </div>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
