@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="t-login h-vh form-container">
    <section class="t-login__container px-3 py-sm-auto">
        <h1 class="t-24 clr-dark-100 fw-bold text-center mt-2">Register</h1>
        <hr />
        <form id="registerForm" class="inputs-container" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h3 class="t-24 clr-dark-100 fw-bold text-center mt-2">Create a new account</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="submit-button-container">
                <button id="registerSubmit" type="submit" class="p-btn p-btn--primary fw-bold mt-45">Register</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
